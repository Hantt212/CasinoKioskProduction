@using PagedList.Mvc;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeaderContent
{
    <h2>HOTRAM REWARDS PROMOTION</h2>
}

<style>
    #printGolden:visited {
        pointer-events: none;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <form method="post" autocomplete="off" onsubmit="searchPromotionByPatron(event)">
                    <div class="row col-md-12">
                        <select id="promotionCombo" name="promotionCombo" onchange="changePromotion()" class="form-select form-control col-md-6" style="font-weight:bold" required></select>
                        <div class="input-group col-md-4">
                            <input type="search" class="form-control" onchange="changePromotion()" onkeypress="return /[0-9]/i.test(event.key)" onkeyup="return /[0-9]/i.test(event.key)" placeholder="Search for PID..." aria-label="Search" aria-describedby="basic-addon2" name="PatronID" id="patronID" required>
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit" id="btnSearch">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>

                        </div>
                    </div>
                </form>

            </div>
            <span class="text-danger" id="notFounfPD"></span>
            @if (TempData["ErrorMessage"] != null)
            {
                <span class="text-danger">@TempData["ErrorMessage"]</span>
            }
            <div id="patronInfo">

            </div>

            <div class="panel-body mt-4">
                <div class="table-responsive">
                    <table id="logTbl" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Ticket No.</th>
                                <th>PlayerID</th>
                                <th>PlayerName</th>
                                <th>PrintedDate</th>
                                <th>PrintedBy</th>
                                <th>Reprint</th>
                                <th>ReprintedBy</th>
                                <th>ReprintedDate</th>

                                <th>Void</th>
                                <th>VoidedBy</th>
                                <th>VoidedDate</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="proLogModal" tabindex="-1" role="dialog" aria-labelledby="proLogModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Log Information</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">

                        <input type="hidden" id="proLogID" />
                    </div>

                    <div class="form-group">
                        <label for="proContent" class="font-weight-bold">Ticket No</label>
                        <input class="form-control" id="proLogTicketNo" placeholder="Ticket No" readonly />
                    </div>

                    <div class="form-group">
                        <label for="proName" class="font-weight-bold">Player Name</label>
                        <input type="text" class="form-control" id="proLogPlayerName" placeholder="Player Name" autocomplete="off" />
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="savePromotionLog()">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section scriptPromotion
{
    <script src="~/Assets/Admin/js/promotion.js?n=6"></script>
}