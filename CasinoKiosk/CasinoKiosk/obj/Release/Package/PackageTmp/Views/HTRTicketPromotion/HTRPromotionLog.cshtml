@using PagedList.Mvc;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeaderContent
{
    <h2>HOTRAM REWARDS PROMOTION</h2>
}

<style>
    #printGolden:visited {
        pointer-events: none;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <form method="post" autocomplete="off" onsubmit="searchPromotionByPatron(event)">
                    <div class="row col-md-12">
                        <select id="promotionCombo" name="promotionCombo" onchange="changePromotion()" class="form-select form-control col-md-6" style="font-weight:bold" required></select>
                        <div class="input-group col-md-4">
                            <input type="search" class="form-control" onchange="changePromotion()" onkeypress="return /[0-9]/i.test(event.key)" onkeyup="return /[0-9]/i.test(event.key)" placeholder="Search for PID..." aria-label="Search" aria-describedby="basic-addon2" name="PatronID" id="patronID" required>
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit" id="btnSearch">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>

                        </div>
                    </div>
                </form>

            </div>
            <span class="text-danger" id="notFounfPD"></span>
            <div id="patronInfo">

            </div>

            <div class="panel-body mt-4">
                <div class="table-responsive">
                    <table id="logTbl" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Ticket No.</th>
                                <th>PlayerID</th>
                                <th>PlayerName</th>
                                <th>PrintedDate</th>
                                <th>PrintedBy</th>
                                <th>Reprint</th>
                                <th>ReprintedBy</th>
                                <th>ReprintedDate</th>

                                <th>Void</th>
                                <th>VoidedBy</th>
                                <th>VoidedDate</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade " id="detailMarketModal" tabindex="-1" role="dialog" aria-labelledby="detailMarketLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Player List</h4>
            </div>
            <div class="modal-body ">
                <table class="table table-bordered table-hover" id="detailMarTbl">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Authorizer
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                PlayerId
                            </th>
                            <th>
                                PlayerName
                            </th>
                        </tr>
                    </thead>
                    <tbody id="detailMarTbd"></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@section scriptPromotion
{
    <script src="~/Assets/Admin/js/promotion.js?n=4"></script>
}