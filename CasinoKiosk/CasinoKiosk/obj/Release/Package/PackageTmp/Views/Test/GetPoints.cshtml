@model PagedList.IPagedList<CKDatabaseConnection.EF.MFBonus_spSelectPlayerPoints_Result>

@using PagedList.Mvc;
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeaderContent
{
    <h2> Test Get Points </h2>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">

            </div>

            <!-- /.panel-heading -->
            @using (Html.BeginForm("GetPoints", "Test", FormMethod.Post, new { @class = "d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search", enctype = "multipart/form-data" }))
            {
                <div class="input-group col-lg-4">



                    <input type="number" class="form-control bg-light border-0 small" placeholder="Search for PID..." aria-label="Search" aria-describedby="basic-addon2" name="ID" required>
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit" id="btnSearch">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>

                </div>
                <br />
                <br />

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>

                                    <th>Log ID</th>
                                    <th>Player ID</th>
                                    <th>Daily Points</th>
                                    <th>Weekly Points</th>
                                    <th>Friday Points</th>
                                    <th>Gaming Date</th>                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var Log in Model)
                                {
                                    <tr>
                                        <td>@Log.ID</td>
                                        <td>@Log.PlayerID</td>
                                        <td>@Log.DailyPoints</td>
                                        <td>@Log.WeeklyPoints</td>
                                        <td>@Log.FridayPoints</td>
                                        <td>@Log.GamingDate</td>                                        
                                       
                                    </tr>

                                }
                            </tbody>
                        </table>

                    </div>
                    <!-- /.table-responsive -->
                </div>

            }
            <!-- /.panel-body -->



        </div>
        <!-- /.panel -->
    </div>
</div>
