@model IEnumerable<CKDatabaseConnection.EF.KioskUserActionLog_SelectAll_Result>

@using PagedList.Mvc;
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeaderContent
{
    <h2> CasinoKiosk UserAction Log </h2>
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-12 text-right">
                        <button id="btnExcelExportKioskUserGrid" class="btn btn-success">Export to Excel </button>
                    </div>
                </div>
            </div>
            <br />

            <!-- /.panel-heading -->
            @using (Html.BeginForm("KioskUserActionLogByDate", "Logs", FormMethod.Post, new { @class = "d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search", enctype = "multipart/form-data" }))
            {
                @*<div class="input-group col-lg-4">



                        <input type="number" class="form-control bg-light border-0 small" placeholder="Search for PID..." aria-label="Search" aria-describedby="basic-addon2" name="ID" required>
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit" id="btnSearch">
                                <i class="fas fa-search fa-sm"></i>
                            </button>
                        </div>

                    </div>*@
                @*<div class="row">
                        <div class="input-group col-lg-4">
                            <input type="number" class="form-control" placeholder="Search for Name..." aria-label="Search" aria-describedby="basic-addon2" name="Name">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit" id="btnSearch">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>

                        </div>
                    </div>
                    <br />*@
                <div class="row">

                    <div class="col-md-12 col-lg-1">From date</div>
                    <div class="col-md-12 col-lg-2">
                        <input type="date" class="form-control" id="dptFromDate" name="dfromdate" />
                    </div>
                    <div class="col-md-12 col-lg-1">To date</div>
                    <div class="col-md-12 col-lg-2">
                        <input type="date" class="form-control" id="dptToDate" name="dtodate" />
                    </div>
                    <div class="col-md-12 col-lg-3">
                        <button class="btn btn-primary" type="submit" id="btnSearchDate" name="dtodate">
                            <i class="fas fa-search fa-sm"></i> Search
                        </button>
                    </div>
                </div>
                <br />
                <br />

                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="KioskUserGrid" class="table table-striped table-bordered table-hover" style="font-size: 14px">
                            <thead>
                                <tr>

                                    <th>ID</th>
                                    <th>UserName</th>
                                    <th>ActionType</th>
                                    <th>Description</th>
                                    <th>ValueBefore</th>
                                    <th>ValueAfter</th>
                                    <th>ActionDate</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var Log in Model)
                                {
                                    <tr>
                                        <td>@Log.ID</td>
                                        <td>@Log.UserName</td>
                                        <td>@Log.ActionType</td>
                                        <td>@Log.Description</td>
                                        <td>@Log.ValueBefore</td>
                                        <td>@Log.ValueAfter</td>
                                        <td>@Log.ActionDate</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @*@Html.PagedListPager(Model, page => Url.Action("DailyLog", new { page }))*@
                    </div>
                    <!-- /.table-responsive -->

                </div>
            }
            <!-- /.panel-body -->

        </div>
        <!-- /.panel -->
    </div>
</div>
