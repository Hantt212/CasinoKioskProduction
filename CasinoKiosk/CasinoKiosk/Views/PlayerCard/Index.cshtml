

@using PagedList.Mvc;
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeaderContent
{
    <h2> PLAYER CARD DASHBOARD </h2>
}

<style>
    #printGolden:visited {
        pointer-events: none;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <form action="/PlayerCard/RegisterPlayer" method="post" onsubmit="submitForm(event)" autocomplete="off">
                    <div class="input-group col-md-12">
                        <label class="col-md-1">Card ID</label>
                        <input type="number" class="form-control col-md-2" id="fCardID" placeholder="Enter Card ID..." name="fCardID" onchange="changeFCardID()" required>
                        <label class="col-md-1">Patron ID</label>
                        <input type="number" class="form-control col-md-2" id="patronID" placeholder="Enter Patron ID..." name="patronID" required>
                        <label class="col-md-1">Passport ID</label>
                        <input type="number" class="form-control col-md-2" id="passportID" placeholder="Enter Passport ID..." name="passportID" required>
                        
                        <label for="chkVisitor" class="ml-3">
                            Is Visitor
                        </label>
                        <input class="ml-3 " style="width:38px; height:38px" type="checkbox" id="chkVisitor" />
                    
                        
                        <button class="btn btn-primary" type="submit" style="margin-left:100px" id="btnSearch" onclick="clickRegister()">
                            Register
                        </button>
                       

                    </div>
                   
                </form>

            </div>
            <br />
            <table id="datatable-json" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>CardID</th>
                        <th>PlayerID</th>
                        <th>Passport</th>
                        <th>Type</th>
                        <th>Active</th>
                        <th>Inserted Date</th>
                        <th>Updated Date</th>
                        <th>Update By</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>

        </div>
    </div>
</div>


<!--Model Card info-->
<div class="modal fade" id="mCardInfo" tabindex="-1" role="dialog" aria-labelledby="mCardInfoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="mCardInfoLabel">Card Patron Infomation</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">

                        <input type="hidden" id="mID" placeholder="mID" />
                    </div>
                    <div class="form-group">
                        <label for="mPID" class="font-weight-bold">Patron ID</label>
                        <input type="text" class="form-control" id="mPID" disabled />
                    </div>
                    <div class="form-group ">
                        <label for="mCardID" class="font-weight-bold">Card ID</label>
                        <input type="number" class="form-control" id="mCardID" />
                    </div>
                    <div class="form-group ">
                        <label for="mChkVisitor" class="font-weight-bold">Visitor</label>
                        <input style="width:38px; height:38px" type="checkbox" class="form-control" id="mChkVisitor" />
                        @*<input class="" style="width:38px; height:38px" type="checkbox" id="mChkVisitor" />*@
                    </div>
                        

</form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnUpdate" onclick="UpdateCardInfoByID();">Update</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<!--Model Card info-->
<div class="modal fade" id="mConfirmDel" tabindex="-1" role="dialog" aria-labelledby="mConfirmDelLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <input type="hidden" id="mCardIdDel" />
                <h4 class="modal-title" id="mCardInfoLabel">Are you sure to delete this Card?</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnUpdate" onclick="ExecDelCardInfoByID();">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

@section scriptTicketPromotion
{
    <script src="~/Assets/Admin/js/playerCard.js?n=8"></script>
}