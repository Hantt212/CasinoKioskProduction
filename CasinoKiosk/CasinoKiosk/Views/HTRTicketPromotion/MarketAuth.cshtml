@*@model PagedList.IPagedList<CKDatabaseConnection.EF.MFBonus_spSelectDailyLogs_Result>*@
@model IEnumerable<CKDatabaseConnection.EF.SpReport_MarketingAuthorizer_Result>

@using PagedList.Mvc;
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeaderContent
{
    <h2> PID WITHOUT GAMING ACITVITY ON 3 MONTHS </h2>
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-12 text-right">
                        <button id="btnExcelExportDailyGrid" class="btn btn-success" onclick="getDetail(`All`)">Export Detail All to Excel </button>
                    </div>
                </div>
            </div>
            <br />

                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="marketingListTbl" class="table table-striped table-bordered table-hover" >
                            <thead>
                                <tr>
                                    <th>Authorizer</th>
                                    <th>ToTal</th>
                                    <th>Detail</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var Marketing in Model)
                                {
                                    <tr>
                                        
                                        <td>@Marketing.Authorizer</td>
                                        <td>@Marketing.PlayerID</td>
                                        <td>
                                            <a href="#" onclick="getDetail(`@Marketing.Authorizer`) ">Detail</a>
                                           
                                        </td>
                                  
                                    </tr>
                                }
                            </tbody>
                        </table>
                      
                    </div>
                

                </div>

        </div>
    </div>
</div>

<div class="modal fade " id="detailMarketModal" tabindex="-1" role="dialog" aria-labelledby="detailMarketLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dissmiss="modal"><span aria-hidden="true">&times;</span></button>*@

                <h4 class="modal-title" id="myModalLabel">Player List</h4>
            </div>
            <div class="modal-body ">
                <table class="table table-bordered table-hover" id="detailMarTbl">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Authorizer
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                PlayerId
                            </th>
                            <th>
                                PlayerName
                            </th>
                        </tr>
                    </thead>
                    <tbody id="detailMarTbd"></tbody>
                </table>
</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section scriptMarket
{
    <script src="~/Assets/Admin/js/marketAuth.js"></script>
}
