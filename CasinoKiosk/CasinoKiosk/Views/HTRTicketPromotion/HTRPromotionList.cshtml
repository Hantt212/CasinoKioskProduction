@using PagedList.Mvc;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeaderContent
{
    <h2>PROMOTION LIST</h2>
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <button type="button" class="btn btn-primary" onclick="openPromotionMd(0)">+ Add</button>

            </div>
            <br />

            <div class="panel-body mt-4">
                <div class="table-responsive">
                    <table id="proTbl" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Promotion's Content </th>
                                <th>Condition</th>
                                <th>Lucky Date</th>
                                <th>Active</th>
                                <th>Created By</th>
                                <th>Created Time</th>
                                <th>Updated By</th>
                                <th>Updated Time</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="proRegisModal" tabindex="-1" role="dialog" aria-labelledby="proRegisModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="proTitle"></h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">

                        <input type="hidden" id="proID" placeholder="proID" />
                    </div>
                    <div class="form-group">
                        <label for="proName" class="font-weight-bold">Promotion Name</label>
                        <input type="text" class="form-control" id="proName" placeholder="Promotion Name" autocomplete="off" />
                    </div>
                    
                    <div class="form-group">
                        <label for="proContent" class="font-weight-bold">Content</label>
                   
                        <textarea class="form-control" id="proContent" placeholder="Promotion Content"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="proCondition" class="font-weight-bold">Condition</label>

                        <textarea class="form-control" id="proCondition" placeholder="Condition"></textarea>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="isActive" class="font-weight-bold">Lucky Date</label>
                            <input type="checkbox" class="ml-3" style="height:30px;width:30px" id="isLuckyDate" />
                        </div>
                        <div class="form-group col-md-6">
                            <label for="isActive" class="font-weight-bold">IsActive</label>
                            <input type="checkbox"  class="ml-3" style="height:30px;width:30px" id="isActive" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="savePromotion()">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



@section scriptPromotion
{
    <script src="~/Assets/Admin/js/promotion.js?n=4"></script>
}