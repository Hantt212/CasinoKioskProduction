@model CKDatabaseConnection.EF.HTRTicketPromotion
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HeaderContent
{
    <h2> Ticket Promotion</h2>
}
<!DOCTYPE html>

<div class="container-fluid p-3 my-3 border">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();" disabled>Issue New Ticket</button><br /><br />
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Ticket. No
                </th>
                <th>
                    PlayerID
                </th>
                <th>
                    PlayerName
                </th>                
                <th>
                    isPrinted
                </th>
                <th>
                    IssuedDate
                </th>
                <th>
                    IssuedTime
                </th>
                <th>
                    PrintedBy
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    IsReprinted
                </th>              
                <th>
                    ReprintedBy
                </th>
                <th>
                    ReprintNumber
                </th>
                @*<th>
                    IsVoided
                </th>
                <th>
                    VoidedDate
                </th>
                <th>
                    VoidedBy
                </th>*@
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dissmiss="modal"><span aria-hidden="true">&times;</span></button>*@

                <h4 class="modal-title" id="myModalLabel">Issue New Ticket</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <input type="hidden" id="UserName" placeholder="UserName" />
                    </div>
                    <div class="form-group">
                        <input type="hidden" id="ID" placeholder="ID" />
                    </div>
                    <div class="row">
                        <div class="col">
                            <input type="text" class="form-control" placeholder="PlayerID..." aria-label="GuestPID" id="GuestPID">
                        </div>
                        <div class="col-auto">
                            <button type="button" class="btn btn-info" id="btnCheck" onclick="return Check();">Check</button>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">

                        <input type="text" class="form-control" id="GuestName" placeholder="PlayerName..." aria-label="PlayerName"/>
                    </div>
                    <br />
                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();" disabled>Print</button>
               @**<button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>*@
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



@section scriptTicketPromotion
{
    <script src="~/Assets/Admin/js/htrTicketPromotion.js"></script>
}